{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "cron": {
    "auto-scraping": {
      "path": "/api/cron/auto-scraping",
      "schedule": "0 * * * *",
      "timeout": 300
    }
  }
}
